<Window x:Class="Recepti.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF806E60">
        <Button Content="Авторизация" Click="AuthorizationButton_Click" HorizontalAlignment="Center" Margin="0,259,0,0" VerticalAlignment="Top" Height="28" Width="160"/>
        <Button Content="Регистрация" HorizontalAlignment="Center" Margin="0,309,0,0" VerticalAlignment="Top" Height="28" Width="160" Click="Button_Click"/>
        <TextBox Name="LoginTextBox" HorizontalAlignment="Center" Margin="0,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="302" Height="25" TextChanged="LoginTextBox_TextChanged"/>
        <TextBox Name="PasswordTextBox" HorizontalAlignment="Center" Margin="0,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="302" Height="25" TextChanged="PasswordTextBox_TextChanged"/>
        <Label Content="Логин" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,160,0,0" />
        <Label Content="Пароль" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,205,0,0" />
    </Grid>
</Window>
