<Window x:Class="Recepti.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu" Height="800" Width="1500" 
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF806E60">
        <TextBlock x:Name="WelcomeTextBlock" FontSize="48" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" 
                   Margin="0,148,0,0" Foreground="White" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,243,0,0">
            <Button Content="Просмотр рецептов" Width="400" Height="70" Margin="0,20,0,0" FontSize="24" Click="ViewRecipesButton_Click" />
            <Button Content="Сменить аккаунт" Width="400" Height="70" Margin="0,20,0,0" FontSize="24" Click="ChangeProfileButton_Click" />
            <Button Content="Выход" Width="400" Height="70" Margin="0,20,0,0" FontSize="24" Click="LogoutButton_Click" />
        </StackPanel>
    </Grid>
</Window>